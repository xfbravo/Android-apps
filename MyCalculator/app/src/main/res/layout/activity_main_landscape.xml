<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/result"
        android:layout_width="790dp"
        android:layout_height="70dp"
        android:gravity="bottom|end"
        android:paddingEnd="50dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0" />
    <android.widget.Button
        android:id="@+id/clear"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:text="AC"
        android:textSize="16sp"
        android:background="@drawable/round_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <android.widget.Button
        android:id="@+id/Lbracket"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_corner"
        android:text="("
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <android.widget.Button
        android:id="@+id/Rbracket"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_corner"
        android:text=")"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <android.widget.Button
        android:id="@+id/divide"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_corner2"
        android:text="รท"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <android.widget.Button
        android:id="@+id/number1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear"
        app:layout_constraintVertical_bias="0.038" />

    <android.widget.Button
        android:id="@+id/number3"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:textColor="@color/white"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rbracket"
        app:layout_constraintVertical_bias="0.037" />

    <android.widget.Button
        android:id="@+id/multiply"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@drawable/round_corner2"
        android:text="ร"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rbracket"
        app:layout_constraintVertical_bias="0.037" />

    <android.widget.Button
        android:id="@+id/number2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:textColor="@color/white"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lbracket"
        app:layout_constraintVertical_bias="0.037" />

    <android.widget.Button
        android:id="@+id/number4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number1"
        app:layout_constraintVertical_bias="0.064" />

    <android.widget.Button
        android:id="@+id/number5"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:textColor="@color/white"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number2"
        app:layout_constraintVertical_bias="0.064" />

    <android.widget.Button
        android:id="@+id/number6"

        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number3"
        app:layout_constraintVertical_bias="0.064" />

    <android.widget.Button
        android:id="@+id/minus"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/round_corner2"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multiply"
        app:layout_constraintVertical_bias="0.066" />

    <android.widget.Button
        android:id="@+id/number7"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4"
        app:layout_constraintVertical_bias="0.088" />

    <android.widget.Button
        android:id="@+id/number8"

        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4"
        app:layout_constraintVertical_bias="0.086" />

    <android.widget.Button
        android:id="@+id/number9"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@drawable/round_corner3"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.638"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4"
        app:layout_constraintVertical_bias="0.086" />

    <android.widget.Button
        android:id="@+id/plus"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner2"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number4"
        app:layout_constraintVertical_bias="0.086" />

    <android.widget.Button
        android:id="@+id/delete"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="delete"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number7"
        app:layout_constraintVertical_bias="0.218" />

    <android.widget.Button
        android:id="@+id/number0"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number7"
        app:layout_constraintVertical_bias="0.218" />

    <android.widget.Button
        android:id="@+id/dot"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner3"

        android:text="."
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number7"
        app:layout_constraintVertical_bias="0.218" />

    <android.widget.Button
        android:id="@+id/equil"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/round_corner2"
        android:text="="
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number7"
        app:layout_constraintVertical_bias="0.218" />
</androidx.constraintlayout.widget.ConstraintLayout>